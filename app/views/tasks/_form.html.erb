
  <%= form_with model: task do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "form-label"%>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :details, class: "form-label" %>
      <%= f.text_field :details, class: "form-control" %>
    </div>
      <% if task.persisted?%>
        <div class="mb-3">
          <%= f.check_box :completed, class: "form-check-input" %>
          <%= f.label :completed, class: "form-check-label" %>
        </div>
      <% end%>
      <div class="mb-3">
        <%= f.submit class: 'btn btn-success' %>
      </div>

      <hr>

      <%= link_to "Back to list", tasks_path, class: "btn btn-secondary" %>
  <% end %>
