<h1>All tasks:</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>completed: <%= task.completed %> | <%= link_to task.title, task_path(task) %> |
    <%= link_to "Delete task", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>

<%= link_to "Add new task", new_task_path %>
